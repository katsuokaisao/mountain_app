<% @title = "山日記" %>
<%# if current_user == @user %>
<% unless current_user == @user %>
<div class="profile">
    <div class="profile-content">
      <%= render partial: 'layouts/profile_avatar', locals: {user: @user} %>
      <div class="profile-content-center">
        <h4><%= @user.username %></h4>
          <div id="follow-form-<%= @user.id %>">
            <% if current_user.follow?(@user) %>
              <%= form_with model: current_user.active_relationships.find_by(followed_id: @user.id), method: :delete, class: 'unfollow-form' do |f| %>
                <div><%= hidden_field_tag :followed_id, @user.id %></div>
                <%= f.submit "フォロー中" %>
              <% end %>
            <% else %>
              <%= form_with model: current_user.active_relationships.build, class: 'follow-form' do |f| %>
                <div><%= hidden_field_tag :followed_id, @user.id %></div>
                <%= f.submit "フォロー" %>
              <% end %>
            <% end %>
          </div>
      </div>
      <p><%= @user.profile.introduce_text %></p>
    </div>
</div>
<% end %>
<div id="wrapper-for-ajax">
  <%= render 'dailys/post_content' %>
</div>
<%# else %>
<%# tabもicon-navもdaily-createもいらない %>
<%# その代わり戻るボタンでさっきいた場所に戻れるようにする redirect_back %>
<%# end %>
