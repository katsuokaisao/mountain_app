<div class="friends-list-wrapper">
  <% @users.each do |user| %>
    <div class="friends-list">
      <div class="friends-list-left">
        <%= link_to  user_dailys_own_path(user.id) do %>
          <%= render partial: 'layouts/profile_avatar', locals: {user: user, a: 80, b: 80} %>
          <p><%= user.username %></p>
        <% end %>
        <div id="follow-form-<%= user.id %>">
          <% if @user.follow?(user) %>
            <%= render partial: 'unfollow_form', locals: {followed_user: user, user: @user } %>
          <% else %>
            <%= render partial: 'follow_form', locals: {user: user, user: @user} %>
          <% end %>
        </div>
      </div>
      <div class="friends-list-center">
        <p><%= user.profile.introduce_text if user.profile %></p>
      </div>
      <div class="friends-list-right">
        <%# メッセージ機能 %>
      </div>
    </div>
  <% end %>
</div>