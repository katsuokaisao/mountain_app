<div class="chats">
  <div id="chat">
    <%= render @messages %>
  </div>
  <div class="posts">
    <%= form_with model: @message, remote: true do |f| %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.label :text, 'メッセージ'%>
      <%= f.text_area :text, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
      <div class="form-submit-wrapper">
        <%= f.submit "投稿",class: 'form-submit'%>
      </div>
    <% end %>
  </div>
</div>
