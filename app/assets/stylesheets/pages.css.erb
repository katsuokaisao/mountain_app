.main-image {
  height: 700px;
  position: relative;
}

.main-image-contents {
  background: rgba(255,255,255,0.3);
  width: 50%;
  height: 40%;
  position: absolute;
  top: 50%;
  right: 0%;
  transform: translate(-50%, -50%);
  border-radius: 35px;
}

.main-image-contents-container {
  position: absolute;
  top: 50%;
  right: 50%;
  transform: translate(50%, -50%);
  width: 80%;
  text-align: center;
}

.main-image-contents-container h2 {
  margin-bottom: 30px;
  color: darkcyan;
  font-size: 28px;
}

.account-button {
  display: inline-block;
  padding: 0.5em 1em;
  text-decoration: none;
  border-radius: 10px;
  font-weight: bold;
  color: #FFF;
  background-color: #1abc9c;
}
.account-button:hover {
  background-color: #1fd0ad; 
  box-shadow: 0 3px 0 #1abc9c;
}

.main-image-background {
  background-image: url("<%= asset_path('IMG_3264_Original.jpg') %>");
  width: 100%;
  height: 700px;
  background-size:cover;
  background-position: center bottom;
  position: absolute;
} 

.devise-message {
  position: absolute;
  top: 0px;
  right: 50%;
  transform: translateX(50%);
  color: red;
  font-size: 20px;
}